				</http:response-validator>
			

</http:request>
			
		
</munit:execution>
		<munit:validation>
			<munit-tools:assert-that doc:name="Assert that http status is 406" doc:id="a8ebddc5-f9bb-403e-83ea-05d4f163ca2d" is="#[MunitTools::equalTo(406)]" expression="#[attributes.statusCode]"/>

		</munit:validation>
	
</munit:test>


